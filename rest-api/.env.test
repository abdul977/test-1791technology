# Test Environment Configuration
NODE_ENV=test

# Database Configuration (will be overridden by in-memory MongoDB)
MONGODB_URI=mongodb://localhost:27017/rest-api-test-db
DB_NAME=rest_api_test_db

# JWT Configuration
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging (minimal for tests)
LOG_LEVEL=error
LOG_FILE=logs/test.log

# Security
BCRYPT_SALT_ROUNDS=4

# Swagger Documentation
SWAGGER_ENABLED=false
