# Production Environment Configuration for Render
NODE_ENV=production
PORT=10000

# Database Configuration (Set in Render dashboard)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
DB_NAME=rest_api_db

# JWT Configuration (Set strong secrets in Render dashboard)
# JWT_SECRET=your-super-secure-jwt-secret-256-bits-minimum
# JWT_REFRESH_SECRET=your-super-secure-refresh-secret-256-bits-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting (More restrictive for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Set after frontend deployment)
# CORS_ORIGIN=https://your-frontend-domain.vercel.app

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_SALT_ROUNDS=12

# Swagger Documentation
SWAGGER_ENABLED=true
